<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".presentation.presentation.ui.fragments.VisualitzarReservesFragment">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="77dp"
        android:layout_height="24dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="168dp"
        android:text="ESPORT"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="77dp"
        android:layout_height="24dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="168dp"
        android:text="DATA"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSuport2l"
        android:layout_width="254dp"
        android:layout_height="31dp"
        android:text="Click a sobre per veure més informació"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.229"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewReservas"
        app:layout_constraintVertical_bias="0.36" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewReservas"
        android:layout_width="339dp"
        android:layout_height="299dp"

        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btnMostrarPistes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="44dp"
        android:background="#00FFFFFF"
        android:text="Button"
        android:textColor="#00FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/txtPartit"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPistes"
        android:layout_width="102dp"
        android:layout_height="36dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/background_pistes"
        android:gravity="center"
        android:text="PISTES"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnMostrarPartit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="276dp"
        android:layout_marginTop="96dp"
        android:background="#00FFFFFF"
        android:text="Button"
        android:textColor="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPartit"
        android:layout_width="102dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/background_partits"
        android:gravity="center"
        android:text="PARTITS"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txtPistes"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnMostrarAmbas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="160dp"
        android:background="#00FFFFFF"
        android:text="Button"
        android:textColor="#00FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/txtPartit"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAmbas"
        android:layout_width="102dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/background_totes"
        android:gravity="center"
        android:text="TOTES"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtLlistaBuida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carregant les reserves"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
