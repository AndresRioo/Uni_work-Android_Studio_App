<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".presentation.presentation.ui.activities.LogInActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="383dp"
        android:layout_height="333dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#333333"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.959">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="313dp"
            android:padding="24dp">

            <EditText
                android:id="@+id/txtCorreu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correu electrÃ²nic"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent" />



            <EditText
                android:id="@+id/txtContrasenya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Contrasenya"
                android:selectAllOnFocus="false"
                android:shadowColor="#FFFFFF"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/btnLogIn"
                app:layout_constraintTop_toBottomOf="@+id/txtCorreu"
                app:layout_constraintEnd_toStartOf="@+id/btnVisualitzarContrasenya"
                tools:layout_editor_absoluteX="24dp"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnLogIn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/disenyoboton"
                android:text="Log In"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toTopOf="@+id/btnSignUp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtContrasenya" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/disenyoboton"
                android:text="Sign Up"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnLogIn" />

            <Button
                android:id="@+id/btnVisualitzarContrasenya"
                android:layout_width="37dp"
                android:layout_height="47dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="144dp"
                android:background="@drawable/_684701"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="244dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/p__1_" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarLogIn"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

</androidx.constraintlayout.widget.ConstraintLayout>
