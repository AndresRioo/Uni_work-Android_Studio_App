<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayoutAjustes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".presentation.presentation.ui.fragments.VisualitzarCalendariPistaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="16dp">
        <!-- Contenido de tu RelativeLayout -->

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/pastelLimon" />

        <TextView
            android:id="@+id/txtCalendariPistes"
            android:layout_marginStart="22dp"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/calendarView"
            android:layout_marginTop="108dp"
            android:layout_marginBottom="32dp"
            android:padding="0sp"
            android:text="Calendari Pistes"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>