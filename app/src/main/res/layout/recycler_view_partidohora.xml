<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:id="@+id/cardViewRVPartido"

        android:backgroundTint="#ADAAE6"
        android:background="@drawable/degradaorosa"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"

        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_gravity="center"

            >


            <TextView
                android:id="@+id/txtHoraPartitRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:text="Hora "
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.24"
                app:layout_editor_absoluteX="30dp"
                app:layout_editor_absoluteY="50dp" />

            <TextView
                android:id="@+id/txtNivellPartitRV"
                android:layout_width="201dp"
                android:layout_height="23dp"
                android:layout_marginStart="64dp"
                android:text="Nivell "
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.736"
                app:layout_editor_absoluteX="160dp"
                app:layout_editor_absoluteY="20dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txtParticipantsPartitRV"
                android:layout_width="125dp"
                android:layout_height="45dp"
                android:layout_marginStart="244dp"
                android:layout_marginTop="20dp"
                android:text="3/4"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_editor_absoluteX="175dp"
                app:layout_editor_absoluteY="60dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>