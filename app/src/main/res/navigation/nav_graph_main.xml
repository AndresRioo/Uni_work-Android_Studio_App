    <fragment
        android:id="@+id/CalendariPartit"
        android:name="edu.ub.pis2324.projecte.presentation.presentation.ui.fragments.VisualitzarCalendariPartitFragment"
        android:label="Calendari Partit"
        tools:layout="@layout/fragment_visualitzar_calendari_partit">
        <action
            android:id="@+id/action_CalendariPartit_to_VisualizarHorasPartido"
