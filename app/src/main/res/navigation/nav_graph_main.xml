<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/VisualitzaEsports">

    <fragment
        android:id="@+id/VisualitzaEsports"
        android:name="edu.ub.pis2324.projecte.presentation.presentation.ui.fragments.VisualitzarEsportsFragment"
        android:label="Visualitza esports"
        tools:layout="@layout/fragment_visualitzar_esports">
        <action
            android:id="@+id/action_VisualitzaEsports_to_ReservarOUnirse"
            app:destination="@id/ReservarOUnirse" />
    </fragment>

    <fragment
        android:id="@+id/AjustesPerfil"
        android:name="edu.ub.pis2324.projecte.presentation.presentation.ui.fragments.AjustesPerfilFragment"
        android:label="Ajustes Perfil"
        tools:layout="@layout/fragment_ajustes_perfil">
        <action
            android:id="@+id/action_AjustesPerfil_to_CanviarContrasenya"
            app:destination="@id/CanviarContrasenya" />
        <action
            android:id="@+id/action_AjustesPerfil_to_MisReservas"
            app:destination="@id/MisReservas" />
    </fragment>

    <fragment
        android:id="@+id/MisReservas"
        android:name="edu.ub.pis2324.projecte.presentation.presentation.ui.fragments.VisualitzarReservesFragment"
        android:label="Mis reservas"
        tools:layout="@layout/fragment_visualitzar_reservas">
        <action
            android:id="@+id/action_MisReservas_to_VisualitzarInfoPartit"
            app:destination="@id/VisualitzarInfoPartit" />
        <action
            android:id="@+id/action_MisReservas_to_VisualitzarInfoPista"
            app:destination="@id/VisualitzarInfoPista" />
    </fragment>

    <fragment
        android:id="@+id/CanviarContrasenya"
        android:name="edu.ub.pis2324.projecte.presentation.presentation.ui.fragments.CanviarContrasenyaFragment"
        android:label="Canviar Contrasenya"
        tools:layout="@layout/fragment_canviar_contrasenya"/>
        <action
            android:id="@+id/action_CanviarContrasenya_to_AjustesPerfil"
            app:destination="@id/AjustesPerfil" />

    <fragment
        android:id="@+id/ReservarOUnirse"
        android:name="edu.ub.pis2324.projecte.presentation.presentation.ui.fragments.OpcionsReservarFragment"
        android:label=" CAMBIO DINAMICO AL NOMBRE DE LA PANTALLA"
        tools:layout="@layout/fragment_opcions_reservar">
        <action
            android:id="@+id/action_ReservarOUnirse_to_CalendariPartit"
            app:destination="@id/CalendariPartit" />
        <action
            android:id="@+id/action_ReservarOUnirse_to_CalendariPista"
            app:destination="@id/CalendariPista" />
    </fragment>

    <fragment
        android:id="@+id/VisualitzarInfoPartit"
        android:name="edu.ub.pis2324.projecte.presentation.presentation.ui.fragments.CancelarPartitFragment"
        android:label="Info Partit"
        tools:layout="@layout/fragment_cancelar_partit">
