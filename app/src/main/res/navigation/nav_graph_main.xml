        android:id="@+id/VisualizarHorasPartido"
        android:name="edu.ub.pis2324.projecte.presentation.presentation.ui.fragments.VisualitzarHoresPartitFragment"
        android:label="Horas Partido"
        tools:layout="@layout/fragment_visualitzar_hores_partit">
        <action
            android:id="@+id/action_VisualizarHorasPartido_to_UnirsePartido"
            app:destination="@id/UnirsePartido" />
    </fragment>

    <fragment
        android:id="@+id/VisualizarHorasPista"
        android:name="edu.ub.pis2324.projecte.presentation.presentation.ui.fragments.VisualitzarHoresPistaFragment"
        android:label="Horas Pista"
        tools:layout="@layout/fragment_visualitzar_hores_pista">
        <action
            android:id="@+id/action_VisualizarHorasPista_to_ReservarPista"
            app:destination="@id/ReservarPista" />
    </fragment>

    <activity
        android:id="@+id/SignUp"
        android:name="edu.ub.pis2324.projecte.presentation.presentation.ui.activities.SignUpActivity"
        android:label="SIGN UP"
        tools:layout="@layout/activity_sign_up"


        />

    <activity
        android:id="@+id/LogIn"
        android:name="edu.ub.pis2324.projecte.presentation.presentation.ui.activities.LogInActivity"
        android:label="LOG IN"
        tools:layout="@layout/activity_log_in"

        />


</navigation>
