            android:id="@+id/action_VisualitzarInfoPartit_to_VisualitzaEsports2"
            app:destination="@id/VisualitzaEsports" />
        <action
            android:id="@+id/action_VisualitzarInfoPartit_to_MisReservas"
            app:destination="@id/MisReservas" />
    </fragment>

    <fragment
        android:id="@+id/VisualitzarInfoPista"
        android:name="edu.ub.pis2324.projecte.presentation.presentation.ui.fragments.CancelarPistaFragment"
