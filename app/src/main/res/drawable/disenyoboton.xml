<!-- Definición de un botón especial con efectos -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Fondo del botón con gradiente -->
    <gradient
        android:startColor="#FF5733"
        android:endColor="#FFC300"
        android:angle="45"/>

    <!-- Especificación del radio de las esquinas del botón -->
    <corners
        android:radius="15dp"/>

    <!-- Padding interno del botón -->
    <padding
        android:left="20dp"
        android:right="20dp"
        android:top="10dp"
        android:bottom="10dp"/>

    <!-- Definición del borde -->
    <stroke
        android:width="3dp"
        android:color="#C70039"/>

    <!-- Animación de pulsación (cambio de color al presionar) -->
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <shape>
                <gradient
                    android:startColor="#FFC300"
                    android:endColor="#FF5733"
                    android:angle="45"/>
                <corners
                    android:radius="15dp"/>
                <stroke
                    android:width="3dp"
                    android:color="#C70039"/>
                <padding
                    android:left="20dp"
                    android:right="20dp"
                    android:top="10dp"
                    android:bottom="10dp"/>
            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:startColor="#FF5733"
                    android:endColor="#FFC300"
                    android:angle="45"/>
                <corners
                    android:radius="15dp"/>
                <stroke
                    android:width="3dp"
                    android:color="#C70039"/>
                <padding
                    android:left="20dp"
                    android:right="20dp"
                    android:top="10dp"
                    android:bottom="10dp"/>
            </shape>
        </item>
    </selector>
</shape>